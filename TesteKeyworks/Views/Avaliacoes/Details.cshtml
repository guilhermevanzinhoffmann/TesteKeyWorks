@model TesteKeyworks.Models.Avaliacao

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Avaliação - @Model.Filme?.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>
        <dt class = "col-sm-2">
           Comentário
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comentario)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-filmeId="@Model?.Filme?.Id" asp-route-habilitarBusca="@ViewData["habilitarBusca"]">Voltar</a>
</div>
